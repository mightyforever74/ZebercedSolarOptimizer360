{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": false,
    "lib": ["dom", "dom.iterable", "esnext"],
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [{ "name": "next" }],
    "baseUrl": "./src",
    "paths": {
      "@/components/*": ["components/*"],
      "@/data": ["data/index.ts"],
      "@/widgets/*": ["widgets/*"],
      "@/app/*": ["app/*"],
      "@/*": ["*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/types",
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts",
    "src/widgets/tables/index.mjs",
    "src/components/ObstacleEditor.tsx",
    "src/types/custom-modules.d.ts",
    "src/components/PanelLayoutVisualizer.jsx",
    "src/app/Hesaplama/panel-asistani/components/stepper.tsx"
  ],
  "exclude": ["node_modules", "dist", "build"]
}
